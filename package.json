{
  "name": "expressjs-template",
  "module": "src/index.ts",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec tsx src/index.ts",
    "build": "rimraf dist && tsc -p . && tsc-alias",
    "watch": "tsc --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "format:check": "prettier . --check",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/bun": "latest",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "lint-staged": "^16.2.7",
    "morgan": "^1.10.1",
    "postgres": "^3.4.7",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  }
}